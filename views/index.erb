
<div class="row">
  <div class="col-md-6">
    <h2>All My Shoe Brands:</h2>
    <% if @brands.any? %>
      <% @brands.each do |brand| %>
        <li><a href="/brand/<%= brand.id %>"><%= brand.name %></a></li>
      <% end %>
    <% else %>
      <p>You don't have any shoe brands</p>
    <% end %>

  </div>

  <div class="col-md-6">
    <h2>All My Shoe Stores:</h2>
    <% if @stores.any? %>
      <% @stores.each do |store| %>
        <li><a href="/store/<%= store.id %>"><%= store.name %></a></li>
      <% end %>
    <% else %>
      <p>You don't have any stores</p>
    <% end %>

  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Add a New Brand</h3>
    <form action="/add_brand" method="post">
      <label for="name">Brand Name:</label>
      <input type="text" name="name"><br>
      <label for="price">Price:</label>
      <input type="text" name="price"><br>
      <button type="submit" class="btn btn-info">Add brand</button>
    </form>
  </div>
  <div class="col-md-6">
    <form action="/add_store" method="post">
      <h3>Add a New Store</h3>
      <label for="name">Store Name:</label>
      <input type="text" name="name"><br>
      <button type="submit" class="btn btn-info">Add store</button>
    </form>
  </div>
</div>
